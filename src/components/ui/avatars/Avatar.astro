---
import { Image } from "astro:assets";

// Destructuramos las propiedades
const { src, alt } = Astro.props;

// Definimos las interfaces de cada propiedad

interface Props {
  src: string;
  alt: string;
}
---

<Image
  class="inline-block h-8 w-8 rounded-full ring-2 ring-neutral-50 dark:ring-zinc-800"
  src={src}
  alt={alt}
  inferSize
  loading={"eager"}
/>
